{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "babel/new-cap": 1,
    "babel/object-shorthand": 0,
    "babel/arrow-parens": 0
  },
  "plugins": [
    "babel"
  ]
}
